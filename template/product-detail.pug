	// product detail
	.product-detail
		.container
			.product-detail__wrap 
				.product-detail__image
					.product-detail__image-main
						img(src="assets/images/pet-1.jpg", alt="Shiba Inu Màu Nâu Đỏ")
					.product-detail__image-wrap
						.product-detail__image-item
							img(src="assets/images/pet-1.jpg", alt="Shiba Inu Màu Nâu Đỏ")
